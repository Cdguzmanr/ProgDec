@model IEnumerable<CG.ProgDec.BL.Models.Program>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p class="row m-2">
    <a asp-action="Create">Create New</a>
</p>

<table id="myData" class="table data-table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DegreeTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/images/@item.ImagePath"
                        id="programimage"
                        alt="@item.Description"
                        onclick="on('/images/@item.ImagePath')"
                        class="imagepropsmall" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreeTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script type="text/javascript" class="init">
    $.noConflict();
    jQuery(document).ready(function ($) {
        $('#myData').DataTable({
            "lengthMenu": [[5, 10, 25, 30, -1], [5, 10, 25, 30, "All"]]
        });
    });
</script>